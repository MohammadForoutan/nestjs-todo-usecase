{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.e2e-spec.ts",
    "!src/main.ts",
    "!src/**/*.module.ts"
  ],
  "coverageDirectory": "./coverage-e2e",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"],
  "testTimeout": 10000,
  "maxWorkers": 1,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testPathIgnorePatterns": ["/node_modules/"],
  "verbose": true
}
